{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "lib": ["es2020"]
  },
  "exclude": ["node_modules"]
}
